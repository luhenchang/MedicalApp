<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ls.shoppingmall.HelloWorld">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/item2_view"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:id="@+id/last_item2_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="周边医生"
                android:textSize="18sp" />
            <TextView
                android:textColor="#dc3a36"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:text="查看更多"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:id="@+id/item2_view1"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#d2d2d7" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.ls.shoppingmall.utils.layoututils.CircularImage
                android:layout_width="60dp"
                android:id="@+id/adapter_last_header_iv"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/adapter_last_header_tv1_second"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="五大浪"
                android:textColor="#f50d0c0c"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/adapter_last_header_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adapter_last_header_tv2"
                android:layout_below="@+id/adapter_last_header_tv1_second"
                android:textSize="12sp"
                android:text="副主任意识"
                android:layout_marginTop="6dp"
                android:textColor="#dc3a36"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/adapter_last_header_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adapter_last_header_tv3"
                android:textSize="12sp"
                android:text="副教授"
                android:layout_marginTop="6dp"
                android:textColor="#dc3a36"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/adapter_last_header_tv2"
                android:layout_toRightOf="@+id/adapter_last_header_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/adapter_last_header_iv"
                android:layout_below="@+id/adapter_last_header_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:text="感冒sdfsfsfs"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp"
                android:background="#232222"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
                <TextView
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="发烧"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="#232222"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="咳嗽"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="#232222"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="新生儿黄磊"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="#232222"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="杏色如果是"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
