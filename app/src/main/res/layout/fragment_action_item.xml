<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ft_message_term_li"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/ft_action_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="公告标题"
            android:textColor="#000000"
            android:textSize="@dimen/x15" />
<!--ft_action_item_tv_title ft_action_item_content_tv ft_message_term_li check_box-->
        <TextView
            android:id="@+id/ft_action_item_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ft_action_item_tv_title"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x13"
            android:ellipsize="end"
            android:maxEms="16"
            android:maxLines="1"
            android:text="文字内容文字能呢问完了完了了我熟练度冯老师"
            android:textSize="@dimen/x13" />

        <ImageView
            android:layout_marginRight="@dimen/x20"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/check_box"
            android:src="@mipmap/ic_uncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:visibility="visible"/>

    </RelativeLayout>

</LinearLayout>