<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ls.shoppingmall.HelloWorld">

    <LinearLayout
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:id="@+id/item3_view"
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:id="@+id/adapter_last_rl_tem3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:text="健康咨询"
                android:textStyle="bold"
                android:textSize="14sp" />
            <TextView
                android:textColor="#dc3a36"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:text="查看更多"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <View
            android:id="@+id/item3_view1"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#71616164" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.ls.shoppingmall.utils.layoututils.CircularImage
                android:layout_width="60dp"
                android:id="@+id/adapter_last_header_iv"
                android:layout_marginLeft="15dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_launcher" />
            <TextView
                android:maxLines="1"
                android:id="@+id/adapter_last_header_tv1_threed"
                android:textSize="13sp"
                android:text="多吃这种蔬菜血液垃圾清理干净真的好"
                android:maxEms="15"
                android:ellipsize="end"
                android:textColor="#f50d0c0c"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/adapter_last_header_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLines="2"
                android:id="@+id/adapter_last_header_tv2"
                android:layout_below="@+id/adapter_last_header_tv1_threed"
                android:textSize="12sp"
                android:text="文章内容文章内容文章内容文章内容文章内容文章内容文章内容文章内容文章内容文章内容文章内容文章内容"
                android:layout_marginTop="6dp"
                android:textColor="#979595"
                android:layout_marginLeft="10dp"
                android:maxEms="20"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/adapter_last_header_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
